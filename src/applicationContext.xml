<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
<!-- creating bean -->
<bean id="myFortune" class="com.sooriya.HappyFortuneService" init-method="sampleinitmethod"
destroy-method="sampledestroymethod">
</bean>
<bean id="myCoach" class="com.sooriya.BaseballCoach" init-method="settingInitMethod"
   destroy-method="settingDestroyMethod">
   <property name="fortuneService" ref="myFortune"/>
   </bean>    
</beans>





